{
  "name": "nestjs-stripe-notion-automation",
  "version": "0.0.1",
  "description": "NestJS + Stripe + Notion + WhatsApp integration for automated payment processing",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "check": "biome check --write .",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "setup:dev": "./scripts/setup-1password-dev.sh",
    "setup:prod": "./scripts/setup-1password-prod.sh",
    "setup:notion": "./scripts/setup-notion-shared.sh",
    "setup:interactive": "./scripts/setup-1password-simple.sh",
    "dev:local": "./scripts/dev-local.sh",
    "docker:dev": "./scripts/docker-with-1password.sh dev nestjs-dev",
    "docker:dev:build": "docker-compose build nestjs-dev && ./scripts/docker-with-1password.sh dev nestjs-dev",
    "docker:test": "./scripts/docker-with-1password.sh test nestjs-test",
    "docker:test:build": "docker-compose build nestjs-test && ./scripts/docker-with-1password.sh test nestjs-test",
    "docker:prod": "./scripts/docker-with-1password.sh production nestjs-prod",
    "docker:prod:build": "docker-compose build nestjs-prod && ./scripts/docker-with-1password.sh production nestjs-prod",
    "docker:down": "docker-compose down",
    "docker:logs:dev": "docker-compose logs -f nestjs-dev",
    "docker:logs:test": "docker-compose logs -f nestjs-test",
    "docker:logs:prod": "docker-compose logs -f nestjs-prod",
    "dev": "pnpm run docker:dev",
    "test:env": "pnpm run docker:test",
    "prod": "pnpm run docker:prod",
    "dev:1password": "op run --env-file=1password.env -- pnpm run start:dev",
    "prod:1password": "op run --env-file=1password.env -- pnpm run start:prod"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@notionhq/client": "^3.1.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "stripe": "^18.2.0",
    "axios": "^1.6.0",
    "twilio": "^5.2.1",
    "class-validator": "^0.14.1",
    "class-transformer": "^0.5.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3"
  },
  "jest": {
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": ["**/*.(t|j)s"],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
