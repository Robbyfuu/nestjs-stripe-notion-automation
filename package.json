{
  "name": "nestjs-stripe-notion-automation",
  "version": "0.0.1",
  "description": "NestJS + Stripe + Notion + WhatsApp integration for automated payment processing",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "build:railway": "bash scripts/railway-1password-build.sh",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "check": "biome check --write .",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "dev": "source scripts/load-env-from-1password.sh development && pnpm run start:dev",
    "dev:docker": "./scripts/dev-docker.sh up",
    "dev:docker:build": "./scripts/dev-docker.sh build",
    "dev:docker:rebuild": "./scripts/dev-docker.sh rebuild",
    "dev:docker:shell": "./scripts/dev-docker.sh shell",
    "dev:docker:logs": "./scripts/dev-docker.sh logs",
    "dev:docker:test": "./scripts/dev-docker.sh test",
    "dev:docker:down": "./scripts/dev-docker.sh down",
    "dev:docker:clean": "./scripts/dev-docker.sh clean",
    "setup:1password": "./scripts/setup-1password-interactive.sh"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@notionhq/client": "^3.1.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "stripe": "^18.2.0",
    "axios": "^1.6.0",
    "twilio": "^5.2.1",
    "class-validator": "^0.14.1",
    "class-transformer": "^0.5.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3"
  },
  "jest": {
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": ["**/*.(t|j)s"],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
